<Page x:Class="Andreeva_TZv2.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Andreeva_TZv2"
      mc:Ignorable="d" Width="363" Height="440"
      Title="Registration"
>

    <Grid>
        <Border Grid.Row="1" Grid.Column="1" Margin="0,10,10,10" Background = "#FF545454">
            <Grid> 
                <TextBox x:Name="PhoneClient" Style="{DynamicResource TextBoxK}" Foreground="DarkGray" Height="35" Margin="49,247,49,138" Text="Введите телефон клиента" TouchEnter="TextBox_TouchEnter" LostFocus="PhoneClient_LostFocus" GotFocus="PhoneClient_GotFocus"/>
                <TextBox x:Name ="NameBox" Style="{DynamicResource TextBoxK}" Foreground="DarkGray" Height="37" Margin="71,104,71,278" Text="Введите имя клиента" GotFocus="NameBox_GotFocus" LostFocus="NameBox_LostFocus"/>

                <Button Background="#FF1D1D1D" Foreground="White" Margin="10,365,10,10" Content="Зарегистрировать" Click="Button_Click"/>

            </Grid>
        </Border>
    </Grid>
</Page>