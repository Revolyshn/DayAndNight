<Page x:Class="Andreeva_TZv2.InformationRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Andreeva_TZv2"
      mc:Ignorable="d" 
      d:DesignHeight="278" d:DesignWidth="223"
      Title="InformationRoom">
    <Grid>
        <Label Foreground="White" Margin="40,10,41,240" Content="Краткая информация:"/>
        <TextBox Background="Gray" Margin="10,38,10,114" x:Name="Info"/>

        <Label Foreground="White" Margin="5,169,120,79" Content="кол-во комнат:"/>
        <TextBox Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="103,176,0,86" RenderTransformOrigin="0.493,0.508" HorizontalAlignment="Left" Width="55" x:Name="CountRoom" IsReadOnly="True"/>
        <Label Foreground="White" Margin="10,204,139,47" Content="Стоимость:"/>
        <TextBox Background="Transparent" BorderThickness="0" Foreground="Gray" Margin="89,210,0,47" RenderTransformOrigin="0.493,0.508" HorizontalAlignment="Left" Width="86" x:Name="Price" IsReadOnly="True"/>
        <Button BorderThickness="0"  Content="Выбрать комнату"  Click="Button_Click" VerticalAlignment="Bottom" Margin="10"/>
    </Grid>

</Page>
