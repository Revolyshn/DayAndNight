<Page x:Class="Andreeva_TZv2.DataRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Andreeva_TZv2"
      mc:Ignorable="d" 
      Width="400" Height="361"
      Title="DataRoom"
>

    <Grid>
        <Border Width="363" Height="343" Grid.Row="1" Grid.Column="1" Margin="0,10,10,10" Background = "#FF545454">
            <Grid>

                <ComboBox Margin="256,11,29,306" Name="TypeRoom"/>
                <Label Foreground="DarkGray" Margin="159,0,112,305" Content="Класс номера:" Height="26" VerticalAlignment="Bottom"/>

                <ComboBox Margin="86,37,233,284" Name="CountPeople"/>
                <Label Foreground="DarkGray" Margin="6,33,277,284" Content="Кол-во чел.:"/>

                <ComboBox Margin="108,12,204,307" Name="CountRoom" Text=""/>
                <Label Foreground="DarkGray" Margin="10,10,253,309" Content="Кол-во комнат:"/>

                <ListBox Margin="10,123,261,10" x:Name="ListRoom" Background="Transparent"/>

                <Button  BorderThickness="0" Content="Найти" Margin="10,91,312,225" Foreground="White" Background="#FF1D1D1D" Click="Button_Click"/>

                <Frame x:Name="InfoRoom" Margin="130,55,10,10"/>

            </Grid>
        </Border>
    </Grid>
</Page>