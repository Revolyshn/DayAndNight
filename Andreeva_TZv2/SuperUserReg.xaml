<Page x:Class="Andreeva_TZv2.SuperUserReg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Andreeva_TZv2"
      mc:Ignorable="d" 
      d:DesignHeight="380" d:DesignWidth="397"
      Title="SuperUserReg">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Button x:Name="regSuperUser_btn" Content="Reg" Width="200" Height="40" Margin="20" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Top" Click="regSuperUser_btn_Click"/>
        <TextBox x:Name="loginSuperUser_tb" HorizontalAlignment="Center" Margin="10" Grid.Row="1" VerticalAlignment="Top" FontSize="32" Height="40" Width="150"/>
        <TextBox x:Name="passwordSuperUser_tb" HorizontalAlignment="Center" Margin="10" Grid.Row="2"  VerticalAlignment="Top" FontSize="32" Height="40" Width="150"/>


    </Grid>
</Page>
